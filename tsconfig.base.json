{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@thinkpro/thinkpro-api/data-access-shared": [
        "libs/thinkpro-api/data-access-shared/src/index.ts"
      ],
      "@thinkpro/thinkpro-api/feature-config": [
        "libs/thinkpro-api/feature-config/src/index.ts"
      ],
      "@thinkpro/thinkpro-api/feature-shared": [
        "libs/thinkpro-api/feature-shared/src/index.ts"
      ],
      "@thinkpro/thinkpro-api/feature-user": [
        "libs/thinkpro-api/feature-user/src/index.ts"
      ],
      "@thinkpro/thinkpro-api/mappings-shared": [
        "libs/thinkpro-api/mappings-shared/src/index.ts"
      ],
      "@thinkpro/thinkpro-api/utils-config": [
        "libs/thinkpro-api/utils-config/src/index.ts"
      ],
      "@thinkpro/thinkpro-api/utils-shared": [
        "libs/thinkpro-api/utils-shared/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
